
<Select TValue="string" @onchange="OnChange" Placeholder="Select an option" Style="width:max-content" Class="form-control">
    <SelectItem hidden value="">Filter by</SelectItem>
    <SelectItem value="All">All</SelectItem>
    <SelectItem value="Task">Task</SelectItem>
    <SelectItem value="Bug">Bug</SelectItem>
</Select>

@code {
    [Parameter]
    public EventCallback<string> OnFilterChanged { get; set; }

    private async Task OnChange(ChangeEventArgs e)
    {
        var selectedValue = e.Value?.ToString();
        Console.WriteLine("Filter changed to: " + selectedValue);
        if (OnFilterChanged.HasDelegate)
        {
            await OnFilterChanged.InvokeAsync(selectedValue);
        }
    }
}
